{
  "name": "htmllint",
  "displayName": "vscode-htmllint",
  "description": "Bring htmllint errors into vscode",
  "author": "Benjamin JEGARD",
  "publisher": "kamikillerto",
  "license": "Apache License 2.0",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/KamiKillertO/vscode-htmllint"
  },
  "bugs": {
    "url": "https://github.com/kamikillerto/vscode-htmllint/issues"
  },
  "homepage": "https://github.com/kamikillerto/vscode-htmllint/blob/master/README.MD",
  "galleryBanner": {
    "theme": "light"
  },
  "icon": "logo.png",
  "categories": [
    "Linters"
  ],
  "keywords": [
    "lint",
    "hmllint",
    "html",
    "validation",
    "check"
  ],
  "engines": {
    "vscode": "^1.29.0"
  },
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "HTMLLINT",
      "properties": {
        "htmllint.enable": {
          "type": "boolean",
          "default": true,
          "description": "Control whether htmllint is enabled or not."
        },
        "htmllint.config": {
          "type": [
            "object",
            "null"
          ],
          "default": null,
          "description": "A stylelint configuration object."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh",
    "lint": "node_modules/.bin/tslint -c tslint.json --project tsconfig.json"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.1",
    "@types/node": "^8.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  }
}
